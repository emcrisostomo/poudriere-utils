setopt   local_options
setopt   local_traps
unsetopt glob_subst

set -o errexit
set -o nounset

command -v poudriere > /dev/null 2>&1 || {
  >&2 print -- Cannot find poudriere.
  exit 1
}

JAIL_NAME=101amd64
POUDRIERE_ETC=/usr/local/etc/poudriere.d

poudriere ports -u
poudriere jail -u -j ${JAIL_NAME}
poudriere bulk -j ${JAIL_NAME} -f ${POUDRIERE_ETC}/${JAIL_NAME}-pkglist
